<!-- Liste des fichiers uploadés -->
<div class="fr-mt-2w" v-if="fileList.length">
  <p class="fr-text--sm">Fichiers sélectionnés :</p>
  <ul class="fr-download-group">
    <li
      v-for="(file, index) in fileList"
      :key="index"
      class="fr-download"
    >
      <p class="fr-download__title">
        {{ file.name }}
        <span class="fr-text--xs fr-text--muted">
          ({{ (file.size / 1024).toFixed(2) }} Ko)
        </span>
      </p>
      <p class="fr-download__detail">
        {{ getFileTypeLabel(file.name) }}
      </p>
      <a
        href="#"
        class="fr-download__link"
        @click.prevent
        download
      >
        Télécharger (simulé)
      </a>
    </li>
  </ul>
</div>
methods: {
    // ...vos méthodes existantes...
    getFileTypeLabel(fileName) {
        const ext = fileName.split('.').pop().toLowerCase();
        switch (ext) {
            case 'pdf':
                return 'Document PDF';
            case 'png':
            case 'jpg':
            case 'jpeg':
                return 'Image';
            default:
                return 'Fichier';
        }
    }
}