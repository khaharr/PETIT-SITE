// src/api/categories.js
export const getCategories = (environnement, zone) => {
  // On simule une API avec des données différentes selon les choix
  const data = {
    'TIPI': {
      'ZA': ['Nominoe', 'Gaïa'],
      'ZU': ['Iris']
    },
    'TIPI-CLIENT': {
      'ZA': ['Cerbère', 'Argos'],
      'ZU': ['Hermès']
    }
  };

  return new Promise((resolve) => {
    setTimeout(() => {
      const result = data[environnement]?.[zone] || [];
      resolve(result);
    }, 500); // simulate delay
  });
};